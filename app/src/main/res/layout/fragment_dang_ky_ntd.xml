<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="20dp">

    <!-- Logo công ty -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sample_company"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Logo công ty"/>

    <!-- Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Mật khẩu -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Mật khẩu"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tên công ty -->
    <EditText
        android:id="@+id/etCompanyName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Tên công ty"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Số điện thoại -->
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Số điện thoại"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/etCompanyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Người đăng ký -->
    <EditText
        android:id="@+id/etRegistrant"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Người đăng ký"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tỉnh thành làm việc (AutoCompleteTextView) -->
    <AutoCompleteTextView
        android:id="@+id/autoProvince"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Tỉnh thành làm việc"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etRegistrant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Mã số thuế -->
    <EditText
        android:id="@+id/etTaxCode"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Mã số thuế"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/autoProvince"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nút đăng ký -->
    <Button
        android:id="@+id/btnRegisterEmployer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Đăng ký tài khoản"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/etTaxCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
